<UserControl x:Class="Информационно_справочная_система.UserControlItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Информационно_справочная_система"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="900" Background="#FFFBF4F4">
   
        <ScrollViewer PanningMode="VerticalOnly" VerticalScrollBarVisibility="Hidden" Grid.ColumnSpan="3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Name="StackPanel1">
            </StackPanel>
            <StackPanel Grid.Column="1" Name="StackPanel2">
            </StackPanel>
            <StackPanel Grid.Column="2" Name="StackPanel3">
            </StackPanel>
        </Grid>
        </ScrollViewer>
   
</UserControl>
