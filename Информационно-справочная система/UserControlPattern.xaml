<UserControl x:Class="Информационно_справочная_система.UserControlPattern"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Информационно_справочная_система"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="4"/>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="4"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="4"/>
        </Grid.ColumnDefinitions>
        <Label Name="label" Grid.Row="1" Grid.Column="1" Content="cfgvhjkl" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="20" Background="#FFD8EAFD" Foreground="#FF1E3D5D" FontFamily="Impact"/>
        <Image Grid.Row="2" Grid.Column="1" Name="image" />

    </Grid>
</UserControl>
